{
  "name": "simple-vscode-extension",
  "description": "A simple VSCode extension to test UI and WORKSPACE scopes",
  "author": "Asim Gunes",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/asimgunes/simple-vscode-extension"
  },
  "publisher": "asimgunes",
  "categories": ["Other"],
  "keywords": ["VSCode"],
  "engines": {
    "vscode": "^1.88.0"
  },
  "activationEvents": ["ag.simple.run"],
  "contributes": {
    "commands": [
      {
        "command": "ag.simple.run",
        "category": "AG",
        "title": "Simple Information Window"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^18.14.6",
    "@types/vscode": "1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@vscode/vsce": "^2.26.1",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "node-loader": "^2.0.0",
    "serve": "^14.2.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "build": "yarn compile && yarn build:esbuild && yarn build:webpack",
    "build:webpack": "webpack --mode development",
    "build:esbuild": "node ./esbuild.js",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./src --ext .ts,.tsx",
    "package": "vsce package",
    "serve": "serve --cors -l 5000 --ssl-cert ./certs/localhost.pem --ssl-key ./certs/localhost-key.pem"
  }
}
