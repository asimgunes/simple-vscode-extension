{
    "compilerOptions": {
        "rootDir": "./src",
        "skipLibCheck": true,
        "lib": [
            "ES2020",
            "DOM"
        ],
        "types": [
            "vscode"
        ],
        "module": "CommonJS",
        "esModuleInterop": true,
        "outDir": "./out",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "declaration": true,
        "stripInternal": true,
        "sourceMap": true,
        "declarationMap": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    }
}